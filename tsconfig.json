{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "alwaysStrict": true,
    "pretty": false,
    "module": "CommonJS",
    "target": "ES2019",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": [
    "src/index.ts",
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}