{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "alwaysStrict": true,
    "pretty": false,
    "module": "CommonJS",
    "target": "ESNext",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "."
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist"]
}
